# =============================================================================
# LAUNCHPAD ENV TEMPLATE — .env.example
# =============================================================================
# This file shows ALL required and optional environment variables.
# Copy to .env.local and fill in your values.
#
# NEVER commit .env.local or any file with real secrets.
# =============================================================================

# -----------------------------------------------------------------------------
# APP
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_NAME="My App"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# -----------------------------------------------------------------------------
# DATABASE — Neon PostgreSQL
# https://console.neon.tech
# -----------------------------------------------------------------------------
DATABASE_URL="postgresql://user:password@ep-xxxxx.us-east-2.aws.neon.tech/dbname?sslmode=require"

# -----------------------------------------------------------------------------
# AUTHENTICATION — Clerk
# https://dashboard.clerk.com
# -----------------------------------------------------------------------------
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_xxxxx"
CLERK_SECRET_KEY="sk_test_xxxxx"

# Clerk URLs (usually don't need to change)
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/dashboard"
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/dashboard"

# Clerk Webhook (for syncing users to database)
CLERK_WEBHOOK_SECRET="whsec_xxxxx"

# -----------------------------------------------------------------------------
# PAYMENTS — Stripe
# https://dashboard.stripe.com
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY="sk_test_xxxxx"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_xxxxx"
STRIPE_WEBHOOK_SECRET="whsec_xxxxx"

# Stripe Price IDs (create in Stripe Dashboard)
STRIPE_PRICE_ID_MONTHLY="price_xxxxx"
STRIPE_PRICE_ID_YEARLY="price_xxxxx"

# -----------------------------------------------------------------------------
# CACHE & RATE LIMITING — Upstash Redis
# https://console.upstash.com
# -----------------------------------------------------------------------------
UPSTASH_REDIS_REST_URL="https://xxxxx.upstash.io"
UPSTASH_REDIS_REST_TOKEN="xxxxx"

# -----------------------------------------------------------------------------
# VECTOR DATABASE — Upstash Vector (for AI features)
# https://console.upstash.com
# -----------------------------------------------------------------------------
UPSTASH_VECTOR_REST_URL="https://xxxxx.upstash.io"
UPSTASH_VECTOR_REST_TOKEN="xxxxx"

# -----------------------------------------------------------------------------
# AI — Anthropic Claude
# https://console.anthropic.com
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY="sk-ant-xxxxx"

# -----------------------------------------------------------------------------
# ERROR TRACKING — Sentry
# https://sentry.io
# -----------------------------------------------------------------------------
SENTRY_DSN="https://xxxxx@xxxxx.ingest.sentry.io/xxxxx"
SENTRY_AUTH_TOKEN="sntrys_xxxxx"
SENTRY_ORG="your-org"
SENTRY_PROJECT="your-project"

# -----------------------------------------------------------------------------
# EMAIL — Resend (optional)
# https://resend.com
# -----------------------------------------------------------------------------
RESEND_API_KEY="re_xxxxx"

# -----------------------------------------------------------------------------
# FILE UPLOADS — UploadThing (optional)
# https://uploadthing.com
# -----------------------------------------------------------------------------
UPLOADTHING_SECRET="sk_live_xxxxx"
UPLOADTHING_APP_ID="xxxxx"

# -----------------------------------------------------------------------------
# ANALYTICS — Vercel (optional, auto-configured on Vercel)
# -----------------------------------------------------------------------------
# No env vars needed — enabled in vercel.json

# -----------------------------------------------------------------------------
# DEVELOPMENT
# -----------------------------------------------------------------------------
# Set to "development" locally, "production" on Vercel
NODE_ENV="development"
