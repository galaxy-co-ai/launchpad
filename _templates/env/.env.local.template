# =============================================================================
# LAUNCHPAD ENV — .env.local
# =============================================================================
# Local development environment variables.
# Copy this file to your project root as .env.local
#
# SETUP ORDER:
# 1. Neon (DATABASE_URL)
# 2. Clerk (auth)
# 3. Upstash Redis (cache)
# 4. Stripe (payments) — can defer until needed
# 5. Anthropic (AI) — can defer until needed
# 6. Sentry (errors) — can defer until production
# =============================================================================

# -----------------------------------------------------------------------------
# APP CONFIG
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_NAME=""
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# -----------------------------------------------------------------------------
# DATABASE — Neon
# Get from: https://console.neon.tech → Project → Connection Details
# Use the "Connection string" with ?sslmode=require
# -----------------------------------------------------------------------------
DATABASE_URL=""

# -----------------------------------------------------------------------------
# AUTH — Clerk
# Get from: https://dashboard.clerk.com → API Keys
# -----------------------------------------------------------------------------
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=""
CLERK_SECRET_KEY=""

# Webhook secret (set up in Clerk Dashboard → Webhooks)
CLERK_WEBHOOK_SECRET=""

# Routes (defaults work for most apps)
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/dashboard"
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/dashboard"

# -----------------------------------------------------------------------------
# CACHE — Upstash Redis
# Get from: https://console.upstash.com → Redis → Details
# -----------------------------------------------------------------------------
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# -----------------------------------------------------------------------------
# PAYMENTS — Stripe
# Get from: https://dashboard.stripe.com → Developers → API Keys
# Use TEST keys for development (sk_test_, pk_test_)
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY=""
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=""
STRIPE_WEBHOOK_SECRET=""

# Price IDs (create products in Stripe Dashboard first)
STRIPE_PRICE_ID_MONTHLY=""
STRIPE_PRICE_ID_YEARLY=""

# -----------------------------------------------------------------------------
# AI — Anthropic
# Get from: https://console.anthropic.com → API Keys
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=""

# -----------------------------------------------------------------------------
# VECTORS — Upstash Vector (if using AI/RAG features)
# Get from: https://console.upstash.com → Vector → Details
# -----------------------------------------------------------------------------
UPSTASH_VECTOR_REST_URL=""
UPSTASH_VECTOR_REST_TOKEN=""

# -----------------------------------------------------------------------------
# ERRORS — Sentry
# Get from: https://sentry.io → Settings → Projects → Client Keys
# -----------------------------------------------------------------------------
SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""
SENTRY_ORG=""
SENTRY_PROJECT=""

# -----------------------------------------------------------------------------
# EMAIL — Resend (optional)
# Get from: https://resend.com → API Keys
# -----------------------------------------------------------------------------
RESEND_API_KEY=""

# -----------------------------------------------------------------------------
# FILE UPLOADS — UploadThing (optional)
# Get from: https://uploadthing.com → Dashboard
# -----------------------------------------------------------------------------
UPLOADTHING_SECRET=""
UPLOADTHING_APP_ID=""
